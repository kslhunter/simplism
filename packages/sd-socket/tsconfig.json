{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "./dist"
  },
  "files": [
    "./src/index.ts"
  ]
}
