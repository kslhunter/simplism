{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@simplism/core": [
        "../core/src/index.ts"
      ]
    },
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "./src"
  ]
}
