sd-pagination {
  display: block;

  > a {
    display: inline-block;
    min-width: calc(var(--font-size-default) * var(--line-height));
    padding: 0 var(--padding-xs);
    text-align: center;
    cursor: pointer;
    color: var(--theme-primary-default);

    &[sd-selected=true],
    &:hover {
      text-decoration: underline;
    }
  }
}