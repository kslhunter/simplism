{
  "extends": [
    "../../tslint.json",
    "codelyzer"
  ],
  "rules": {
    "no-null-keyword": false,
    "angular-whitespace": [
      true,
      /*TODO "check-interpolation",*/
      "check-semicolon"
    ],
    "banana-in-box": true,
    "templates-no-negated-async": true,
    "directive-selector": [
      true,
      "attribute",
      "sd",
      "camelCase"
    ],
    /*TODO "component-selector": [
      true,
      "element",
      "sd",
      "kebab-case"
    ],*/
    "max-inline-declarations": false,
    "no-life-cycle-call": true,
    "prefer-output-readonly": true,
    /*TODO "no-conflicting-life-cycle-hooks": true,*/
    "enforce-component-selector": false,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    /*TODO "use-host-property-decorator": true,*/
    "use-view-encapsulation": true,
    "no-attribute-parameter-decorator": true,
    "no-output-named-after-standard-event": false,
    "no-input-rename": true,
    /*TODO "no-output-rename": true,*/
    "no-output-on-prefix": true,
    /*TODO "no-forward-ref": true,*/
    "no-unused-css": true,
    "use-life-cycle-interface": true,
    "contextual-life-cycle": true,
    "trackBy-function": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": [
      true,
      "Component",
      "Control",
      "Modal"
    ],
    "directive-class-suffix": true,
    "pipe-impure": true,
    "i18n": false,
    "template-cyclomatic-complexity": false,
    "template-conditional-complexity": [
      true,
      4
    ]
  }
}